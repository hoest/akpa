@import 'jeet'

$grijs = #e6e6e6
$donker-grijs = #5f5f5f
$wit = #ffffff
$rood = #be1621
$blauw = #212953
$zwart = #000000

$font-family = 'Playfair Display', serif;

normalize-css()
base()

body
  background-color $wit
  color $zwart
  font-family $font-family

  .offset-1
    shift(1/12)

  .offset-2
    shift(2/12)

  .offset-3
    shift(3/12)

  .offset-4
    shift(4/12)

  .offset-5
    shift(5/12)

  .offset-6
    shift(6/12)

  .col-4
    column(4/12)

  .col-5
    column(5/12)

  .col-6
    column(6/12)

  .col-7
    column(7/12)

  .col-8
    column(8/12)

  .col-9
    column(9/12)

  .col-10
    column(10/12)

  img
    max-width 100%

  a
    text-decoration none
    color $rood

    &:hover
      text-decoration underline

  .hidden
    display none

  &.scroll
    .outer
      header
        fixed top left
        margin .5em 0 0 0
        transition all 1s ease

      nav
        .logo
          top -2px
          left 50%
          margin-left -(195/4)px

          img
            max-width 50%

      main
        margin-top 100px

  .outer
    header
      background-color $rood
      color $wit
      margin 3em 0 0 0
      width 100%
      z-index 10
      transition all 1s ease

      .inner
        center(960px)

      nav
        display flex
        position relative
        font-weight bold
        font-size .9rem

        ul
          padding 0

          li
            display inline-block
            margin 0 .5em
            padding 0

          &.main
            display flex
            flex-flow row wrap
            justify-content flex-end
            margin 1em 0
            order 3
            width 50%

            +below(900px)
              display none

          &.lang
            display flex
            flex-flow row wrap
            justify-content flex-start
            margin 0.5em 0
            order 1
            width 50%

        .logo
          order 2
          position absolute
          top -(114/4)px
          left 50%
          margin-left -(195/2)px
          z-index 2

          +mobile()
            left 70%

      a
        color $wit

    main
      font-size 1.25rem
      line-height 1.25em

      h1
        line-height 1.25em

      section
        &.intro
          background-color $wit
          background-image url('./images/grijs-wit-blocks.png')
          background-repeat repeat-x
          text-align center
          position relative

          h1
            background-image url('./images/delicious-dutch-stroopwafels.png')
            background-repeat no-repeat
            background-position center center
            width 100%
            height 97px
            margin 2.5rem 0 0 0
            +mobile()
              background-size 80%

          .bestel-button
            position absolute
            bottom 4em
            right 20%
            transition()
            +below(775px)
              bottom .5em
              right .5em
            +mobile()
              zoom .75

        &.product
          background-color $blauw
          color $wit
          background-image url('./images/stroopwafels-blauw.png')
          background-repeat no-repeat
          background-size contain

          .inner
            .text
              padding 100px 0
              text-align center
              font-size 1.5rem
              line-height 1.5em
              +mobile()
                padding 50px 0
                font-size 1rem
                line-height 1.5em

        &.bestelling
          padding 100px 0
          background-color $wit
          background-repeat no-repeat
          background-position center right
          +mobile()
            font-size 1rem
            line-height 1.5em
            padding 1em 0
            .col-6
              span(10/12)
              shift(1/12)

          img
            margin-top 3em
            +mobile()
              margin-top 0

        &.over
          background-color $rood
          color $wit
          background-image url('./images/rood-wit-blocks.png')
          padding 100px 0
          +mobile()
            font-size 1rem
            line-height 1.5em
            padding 1em 0

            .col-7, .col-5
              span(10/12)
              shift(1/12)

          a
            color $wit
            text-decoration underline

        .inner
          center(960px)
          +below(960px)
            padding 0 1em

    footer
      background-color $grijs
      color $donker-grijs
      text-align center

      a
        color $donker-grijs
        text-decoration underline

      .inner
        center(960px)
        font-size .9rem
        line-height 2em
        padding 2em 0
