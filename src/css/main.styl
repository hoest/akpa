@import 'jeet'

$grijs = #e6e6e6
$donker-grijs = #5f5f5f
$wit = #ffffff
$rood = #be1621
$blauw = #273583
$zwart = #000000

$font-family = 'Playfair Display', serif;


normalize-css()
base()

body
  background-color $wit
  color $zwart
  font-family $font-family

  .offset-1
    shift(1/12)

  .offset-2
    shift(2/12)

  .offset-3
    shift(3/12)

  .offset-4
    shift(4/12)

  .offset-5
    shift(5/12)

  .offset-6
    shift(6/12)

  .col-4
    column(4/12)

  .col-5
    column(5/12)

  .col-6
    column(6/12)

  .col-7
    column(7/12)

  .col-8
    column(8/12)

  .col-9
    column(9/12)

  .col-10
    column(10/12)

  img
    max-width 100%

  a
    text-decoration none
    color $rood

    &:hover
      text-decoration underline

  .outer
    header
      background-color $rood
      color $wit
      margin 3em 0 0 0

      .inner
        center(960px)

      nav
        display flex
        position relative
        font-weight bold

        ul
          margin 0.5 0
          padding 0

          li
            display inline-block
            margin 0 .5em
            padding 0

          &.main
            width 50%
            order 3
            display flex
            flex-flow row wrap
            justify-content flex-end

          &.lang
            width 50%
            order 1
            display flex
            flex-flow row wrap
            justify-content flex-start

        .logo
          order 2
          position absolute
          top -(114/4)px
          left 50%
          margin-left -(195/2)px
          z-index 2

      a
        color $wit

    main
      font-size 1rem
      line-height 1.3em

      section
        &.intro
          background-color $wit
          background-image url('./images/grijs-wit-blocks.png')
          background-repeat repeat-x
          text-align center
          position relative
          max-height 609px

          h1
            color $blauw
            margin-top 1em
            font-size 2.5rem
            line-height 2.2rem

            .sub
              display block
              color $rood
              font-size 1.5rem
              margin 0
              line-height 1em

          img
            max-width 70%

          .bestel-button
            position absolute
            bottom 4em
            right 20%

        &.product
          background-color $blauw
          color $wit
          background-image url('./images/stroopwafels-blauw.png')
          background-repeat no-repeat
          min-height 600px

          .inner
            .text
              padding 100px 0
              text-align center
              font-size 1.7rem
              line-height 1.7em

        &.bestelling
          padding 100px 0
          background-color $wit
          background-image url('./images/verpakking.png')
          background-repeat no-repeat
          background-position center right
          font-size 1.3rem
          line-height 1.3em

        &.over
          background-color $rood
          color $wit
          background-image url('./images/rood-wit-blocks.png')

          .over-inner
            padding 100px 0
            background-image url('./images/kant.png')
            background-repeat no-repeat
            background-position center left
            background-size 600px auto
            font-size 1.3rem
            line-height 1.3em

          a
            color $wit
            text-decoration underline


        .inner
          center(960px)

    footer
      background-color $grijs
      color $donker-grijs
      text-align center

      a
        color $donker-grijs
        text-decoration underline

      .inner
        center(960px)
        font-size .9rem
        line-height 2em
        padding 2em 0
